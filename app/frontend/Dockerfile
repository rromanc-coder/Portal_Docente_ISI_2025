# ===== Etapa 1: Build con Node =====
FROM node:20 AS build
WORKDIR /app

# Copiamos dependencias y cÃ³digo
COPY package*.json ./
RUN npm install

COPY . .

# ðŸ”¹ Compila el frontend con Vite
RUN npm run build

# ===== Etapa 2: Nginx para servir el frontend =====
FROM nginx:1.25-alpine
WORKDIR /usr/share/nginx/html

# ðŸ”¹ Limpia el contenido anterior
RUN rm -rf ./*

# ðŸ”¹ Copia el build nuevo desde la etapa anterior
COPY --from=build /app/dist ./

# ðŸ”¹ Copia la configuraciÃ³n personalizada de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
