# ===== Etapa 1: build con Node moderno =====
FROM node:20 AS build
WORKDIR /app

# Copia el cÃ³digo fuente del frontend
COPY . .

# Instala dependencias y genera el build
RUN npm ci --omit=dev && npm run build

# ===== Etapa 2: servidor Nginx =====
FROM nginx:1.25-alpine
WORKDIR /usr/share/nginx/html

# ðŸ”¹ Limpia cualquier build previo antes de copiar el nuevo
RUN rm -rf ./*

# ðŸ”¹ Copia el build generado en la primera etapa
COPY --from=build /app/dist ./

# ðŸ”¹ Copia la configuraciÃ³n personalizada de Nginx
COPY ./nginx.conf /etc/nginx/conf.d/default.conf

# Exponer puerto 80 (Nginx)
EXPOSE 80

# Comando final de ejecuciÃ³n
CMD ["nginx", "-g", "daemon off;"]
