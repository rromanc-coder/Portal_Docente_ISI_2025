# ===== Etapa 1: build con Node moderno =====
FROM node:20 AS build
WORKDIR /app

# Copia todo el cÃ³digo fuente
COPY . .

# ðŸ”¹ Instala dependencias (incluye devDependencies)
RUN npm install && npm run build

# ===== Etapa 2: servidor Nginx =====
FROM nginx:1.25-alpine
WORKDIR /usr/share/nginx/html

# ðŸ”¹ Limpia el contenido anterior del HTML
RUN rm -rf ./*

# ðŸ”¹ Copia el build generado en la etapa anterior
COPY --from=build /app/dist ./

# ðŸ”¹ Copia la configuraciÃ³n de Nginx
COPY ./nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
